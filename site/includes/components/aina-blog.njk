{% macro postOverView(postImage, postTitle, postDate) %}
    <div class="flex mb-6">
        <div class="rounded-full overflow-hidden w-12 h-12">
            <a class="h-100" href="#">
                <img  class="block w-auto" src="{{ postImage }}" alt="post-image">
            </a>
        </div>
        <div class="ml-6">
            <a class="block text-sm hover:text-blue-500 leading-relaxed" href="#">{{ postTitle }}</a>
            <a class="block text-sm text-gray-500 hover:text-blue-500 leading-relaxed" href="#">{{ postDate }}</a>
        </div>
    </div>
{% endmacro %}