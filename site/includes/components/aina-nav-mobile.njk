{% import 'components/aina-logo.njk' as logo %}

<nav id="mobile-nav" class="mobile-nav fixed left-0 top-0 h-screen w-full overflow-y-auto pt-24 bg-white z-50 md:hidden">

    <ul>

        {% for item in navigation.aina_main %}

        <li class="item relative opacity-0 nav-element">

            <a href="{{ item.url | safe }}" class="link block py-2 px-5 text-blue-500 text-3xl hover:text-blue-800 {% if page.url == item.url %}active text-blue-800{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

        </li>

        {% endfor %}

    </ul>

</nav>

<div class="flex flex-col fixed w-full top-0 bg-white z-50  md:hidden">
    {% import 'components/alert.njk' as alert %}
    <div class="creditsAlert">
        {{ alert.alert() }}
    </div>
    <div class="w-full flex items-center justify-center pt-2">
        {{ logo.logo() }}
    </div>
    <button id="mobile-nav-toggle" class="h-12 mobile-nav-toggle flex items-center justify-center font-bold border-none text-gray-900 focus:outline-none" aria-label="Mobile menu toggle" aria-expanded="false" aria-controls="mobile-nav">
        <span class="mobile-nav-label mr-2 font-medium">Menu</span>
        <span class="mobile-nav-icon" aria-hidden="true">
            <span class="mobile-nav-icon-line bg-gray-900 w-6 block transition-all duration-200 ease-out mb-1"></span>
            <span class="mobile-nav-icon-line bg-gray-900 w-6 block transition-all duration-200 ease-out mb-1"></span>
            <span class="mobile-nav-icon-line bg-gray-900 w-6 block transition-all duration-200 ease-out"></span>
        </span>
    </button>
</div>
