<nav class="flex items-center text-base">
    {% for item in navigation.aina_main %}

        <a href="{{ item.url | safe }}"
            class="uppercase mr-4 py-4  pt-5 font-normal border-blue-500
            {% if page.url == item.url %}
            border-b-4 text-blue-500
            {% else %}
            border-b-4 border-opacity-0 hover:border-opacity-100 hover:text-blue-500
            {% endif %}"
            {% if page.url == item.url %}
            aria-current="page"
            {% endif %}>
            {{ item.label }}
        </a>

    {% endfor %}
</nav>